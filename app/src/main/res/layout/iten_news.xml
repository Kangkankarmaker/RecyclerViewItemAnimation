<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    >


    <RelativeLayout
        android:id="@+id/anim"
        android:layout_marginTop="20dp"
        android:background="@drawable/card_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp">


        <TextView
            android:id="@+id/txt_side"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="11dp"
            android:hint="Title"
            android:layout_alignParentRight="true"
            android:layout_marginRight="11dp" />

        <TextView
            android:id="@+id/txt_details"
            android:layout_width="291dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="53dp"
            android:layout_marginStart="53dp"
            android:layout_marginTop="50dp"
            android:hint="hey guys,
in this side series we are going to create a beautiful list UI with animation :
in this part I'm going to design recyclerview item layout
next part we will setup the adapter
"
            android:textColor="#6eacd9" />

        <TextView
            android:id="@+id/txt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/txt_side"
            android:layout_marginStart="60dp"
            android:hint="Title"
            android:text=""
            android:textColor="#d40505"
            android:layout_marginLeft="60dp"
            android:layout_alignParentLeft="true" />

        <ImageView
            android:id="@+id/img_view"
            android:layout_width="40dp"
            android:layout_height="70dp"
            android:src="@mipmap/ic_launcher"/>

    </RelativeLayout>

</LinearLayout>
